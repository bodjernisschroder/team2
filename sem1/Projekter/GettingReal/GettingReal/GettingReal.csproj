<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="View\fonts\PPFragment-SansSemiBold.ttf" />
    <None Remove="View\fonts\PPFragment-SerifRegular.ttf" />
    <None Remove="View\img\publico_light.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="View\fonts\PPFragment-SansSemiBold.ttf" />
    <Resource Include="View\fonts\PPFragment-SerifRegular.ttf" />
    <Resource Include="View\img\publico_light.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
