<Window x:Class="GettingReal.SavePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GettingReal"
        mc:Ignorable="d"
        Title="SavePopup" Height="175" Width="325"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="Tryk på gennemse og vælg den ønskede destination:" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtboxSavePath" HorizontalAlignment="Left" Height="18" TextWrapping="NoWrap" Text="" VerticalAlignment="Center" Width="202" Margin="10,0,0,0"/>
        <Button x:Name="btnSaveGennemse" Content="Gennemse" HorizontalAlignment="Left" Height="18" Margin="217,0,0,0" VerticalAlignment="Center" Width="73" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0" Click="btnSaveGennemse_Click"/>
        <Button x:Name="btnSaveOk" Content="OK" Width="60" HorizontalAlignment="Left" Margin="152,105,0,0" VerticalAlignment="Top" Click="btnSaveOk_Click"/>
        <Button x:Name="btnSaveFortryd" Content="Fortryd" Width="60" HorizontalAlignment="Left" Margin="230,105,0,0" VerticalAlignment="Top" Click="btnSaveFortryd_Click"/>
    </Grid>
</Window>
