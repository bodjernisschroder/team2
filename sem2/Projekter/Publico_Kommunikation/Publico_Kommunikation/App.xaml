<Application
    x:Class="Publico_Kommunikation.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Publico_Kommunikation"
    xmlns:view="clr-namespace:Publico_Kommunikation.MVVM.Views"
    xmlns:viewModel="clr-namespace:Publico_Kommunikation.MVVM.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModel:QuoteViewModel}">
            <view:QuoteView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ProductsViewModel}">
            <view:ProductsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:QuotesViewModel}">
            <view:QuotesView />
        </DataTemplate>
    </Application.Resources>
</Application>