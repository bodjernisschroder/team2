        <Label  x:Name="lblHourlyRate" HorizontalAlignment="Left" Margin="20,0,0,80" VerticalAlignment="Bottom" Width="104">
            <TextBlock>
                <Run Text="Timepris: " />
                <Run Text="{Binding HourlyRate}" />
            </TextBlock>
        </Label>

        <Label  x:Name="lblTotalPrice" HorizontalAlignment="Left" Margin="20,0,0,40" VerticalAlignment="Bottom" Width="104">
            <TextBlock>
                <Run Text="Totalpris: " />
                <Run Text="{Binding Sum}" />
            </TextBlock>
        </Label>
