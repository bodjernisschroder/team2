<UserControl x:Class="Publico_Kommunikation_Project.MVVM.Views.LoadQuotesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Publico_Kommunikation_Project.MVVM.ViewModels" d:DataContext="{d:DesignInstance Type=local:QuotesViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="500">
    <Grid Background="#FFFFFF">
        <ListBox Margin="0,0,0,0" 
              SelectionMode="Single"
              ItemsSource="{Binding Quotes}"
              DisplayMemberPath="QuoteId">
            <!--<ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                </Style>
            </ListBox.ItemContainerStyle>-->
        </ListBox>
    </Grid>
</UserControl>
