<Window
    x:Class="Publico_Kommunikation_Project.MVVM.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Publico_Kommunikation_Project.MVVM.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Publico Kommunikation"
    Width="1000"
    Height="550"
    d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Content="Opret nyt tilbud"
                    Height="25"
                    Command="{Binding ShowQuoteAndProductsCommand}"/>
            <Button Content="IndlÃ¦s tilbud"
                    Height="25"
                    Command="{Binding ShowQuoteOverviewCommand}"/>
        </StackPanel>
        <ContentControl Grid.Column="1" Content="{Binding QuoteView}"/>
        <ContentControl Grid.Column="1" Content="{Binding QuotesView}"/>
        <ContentControl Grid.Column="2" Content="{Binding ProductsView}"/>
    </Grid>
</Window>